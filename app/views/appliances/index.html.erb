<p id="notice"><%= notice %></p>

<h1>Appliances</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Type</th>
      <th>Make</th>
      <th>Model</th>
      <th>Year</th>
      <th>Last serviced</th>
      <th>Service due</th>
      <th>Notes</th>
      <th>House</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appliances.each do |appliance| %>
      <tr>
        <td><%= appliance.category %></td>
        <td><%= appliance.type %></td>
        <td><%= appliance.make %></td>
        <td><%= appliance.model %></td>
        <td><%= appliance.year %></td>
        <td><%= appliance.last_serviced %></td>
        <td><%= appliance.service_due %></td>
        <td><%= appliance.notes %></td>
        <td><%= appliance.house_id %></td>
        <td><%= appliance.contact_id %></td>
        <td><%= link_to 'Show', appliance %></td>
        <td><%= link_to 'Edit', edit_appliance_path(appliance) %></td>
        <td><%= link_to 'Destroy', appliance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

